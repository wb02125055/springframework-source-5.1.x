<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 基础bean -->
	<bean class="com.wb.spring.propertyeditor.domain.Student">
		<property name="stuName" value="wangbing"/>
		<property name="teacher">
			<value>bw_18_12345@qq.com</value>
		</property>
	</bean>

	<!-- 方式1
	<bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="propertyEditorRegistrars">
			<list>
				<bean class="com.wb.spring.propertyeditor.ext.TeacherPropertyEditorRegistrar" />
			</list>
		</property>
	</bean>
	-->

	<!-- 方式2 -->
	<bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="customEditors">
			<map>
				<entry key="com.wb.spring.propertyeditor.domain.Teacher" value="com.wb.spring.propertyeditor.ext.TeacherEditor"/>
			</map>
		</property>
	</bean>
</beans>